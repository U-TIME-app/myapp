<?xml version="1.0" encoding="utf-8"?>
<com.UTime.nankai.SwipeListLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_weight="0.13"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/task_change"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#5555"
            android:gravity="center"
            android:onClick="edit_sub"
            android:text="编辑" />
        <TextView android:id="@+id/task_delete_sub"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#5555"
            android:gravity="center"
            android:onClick="deleteTask_sub"
            android:text="删除" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="4sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/task_id_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:visibility="gone" />
            <CheckBox
                android:id="@+id/done_sub"
                android:checked="false"
                android:onClick="done_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/task_title_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="4sp" />
    </LinearLayout>
</com.UTime.nankai.SwipeListLayout>
